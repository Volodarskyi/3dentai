{
  "compilerOptions": {
    "target": "es2022",              // Optional: consider "es2022" for broader compatibility
    "module": "es2022",               // Matches your use of ES modules
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
